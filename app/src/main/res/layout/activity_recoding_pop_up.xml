<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.cmu.hcii.sugilite.RecodingPopUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test VIEW_CLICK Listener Popup"
        android:id="@+id/promptTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/promptTextView"
        android:layout_alignParentEnd="true"
        android:id="@+id/propertyTable">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package Name"
                android:id="@+id/packageName"
                android:onClick="entryOnSelect"
                android:nestedScrollingEnabled="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Name"
                android:id="@+id/className"
                android:onClick="entryOnSelect" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text"
                android:id="@+id/text"
                android:onClick="entryOnSelect" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ContentDescription"
                android:id="@+id/contentDescription"
                android:onClick="entryOnSelect" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View ID"
                android:id="@+id/viewId"
                android:onClick="entryOnSelect" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bounds in Screen"
                android:id="@+id/boundsInScreen"
                android:onClick="entryOnSelect" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bounds in Parent"
                android:id="@+id/boundsInParent"
                android:onClick="entryOnSelect" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/time" />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/nextButton"
        android:layout_column="0"
        android:nestedScrollingEnabled="false"
        android:onClick="finishActivity"
        android:layout_alignBottom="@+id/propertyTable"
        android:layout_alignLeft="@+id/propertyTable" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn off Recording"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/propertyTable"
        android:layout_alignRight="@+id/propertyTable"
        android:onClick="turnOffRecording" />

</RelativeLayout>
